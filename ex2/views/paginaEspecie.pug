extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Plantas da espécie #{list[0]['Espécie']}
      p Nome Científico: #{list[0]['Nome Científico']}
    .w3-container
      table.w3-table-all
        tr
          th _id
          th Freguesia
          th Espécie
          th Estado 
          th Número de intervenções        
        each p in list
          tr
              td 
                a(href="/" + p._id) #{p._id}
              td= p.Freguesia
              td 
                a(href="/especie/" + p.Espécie) #{p.Espécie}
              td= p.Estado
              td= p['Número de intervenções']
              
    footer.w3-container.w3-teal
      h5 Generated by EngWeb2023 in #{d}
      a(href="/") Voltar à Página Principal
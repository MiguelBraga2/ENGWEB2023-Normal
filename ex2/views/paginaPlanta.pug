extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Planta #{registo._id}
    .w3-container
      table.w3-table-all
        table
          tr
            th _id
            td= registo._id
          tr
            th Número de Registo
            td= registo['Número de Registo']
          tr
            th Código de rua
            td= registo['Código de rua']
          tr
            th Rua
            td= registo.Rua
          tr
            th Local
            td= registo.Local
          tr
            th Freguesia
            td= registo.Freguesia
          tr
            th Espécie
            td= registo.Espécie
          tr
            th Nome Científico
            td= registo['Nome Científico']
          tr
            th Origem
            td= registo.Origem
          tr
            th Data de Plantação
            td= registo['Data de Plantação']
          tr
            th Estado
            td= registo.Estado
          tr
            th Caldeira
            td= registo.Caldeira
          tr
            th Tutor
            td= registo.Tutor
          tr
            th Implantação
            td= registo.Implantação
          tr
            th Gestor
            td= registo.Gestor
          tr
            th Data de actualização
            td= registo['Data de actualização']
          tr
            th Número de intervenções
            td= registo['Número de intervenções']
              
    footer.w3-container.w3-teal
      h5 Generated by EngWeb2023 in #{d}
      a(href="/") Voltar à Página Principal